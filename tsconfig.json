{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "incremental": true,

    "target": "es2021",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
